{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleDetection": "force",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "/"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
